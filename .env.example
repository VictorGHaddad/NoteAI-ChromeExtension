# Audio Transcriber Environment Variables
# Copy this file to .env and fill in your values

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Backend Configuration
BACKEND_HOST=localhost
BACKEND_PORT=8000

# Dashboard Configuration
DASHBOARD_PORT=3000

# API Base URL (used by frontend and extension)
# For local development: http://localhost:8000
# For production: https://your-domain.com
API_BASE_URL=http://localhost:8000

# Audio File Limits
# Maximum audio file size in MB (default: 200MB)
# For long meetings/recordings: 
#   - 40 minutes: ~400MB (set MAX_AUDIO_SIZE_MB=500)
#   - 2 hours: ~1200MB (set MAX_AUDIO_SIZE_MB=1500)
#   - 4+ hours: increase proportionally
MAX_AUDIO_SIZE_MB=200

# Database Configuration (if not using Docker)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/audio_transcriber

# Example: OPENAI_API_KEY=sk-1234567890abcdef1234567890abcdef