{
  "manifest_version": 3,
  "name": "Audio Transcriber",
  "version": "2.1.0",
  "description": "Transcrição automática de áudio com IA - Design minimalista",
  "permissions": [
    "activeTab",
    "storage",
    "tabCapture",
    "offscreen"
  ],
  "host_permissions": [
    "http://localhost:8000/*",
    "http://10.0.0.111:8000/*",
    "https://api.openai.com/*",
    "<all_urls>"
  ],
  "optional_host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Audio Transcriber",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}